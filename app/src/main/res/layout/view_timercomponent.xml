<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timer_view_component_timerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temporary_text"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/timer_view_component_timertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temporary_text"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/timer_view_component_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_color"
            android:contentDescription="@string/info"
            android:layout_marginEnd="@dimen/timer_view_component_margin"
            android:minWidth="@dimen/timer_view_component_button_width"
            android:minHeight="@dimen/timer_view_component_button_height"
            android:src="@drawable/baseline_info_24" />

        <ImageButton
            android:id="@+id/timer_view_component_startStop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/timer_view_component_margin"
            android:backgroundTint="@color/button_color"
            android:contentDescription="@string/start_stop_button_text"
            android:minWidth="@dimen/timer_view_component_button_width"
            android:minHeight="@dimen/timer_view_component_button_height"
            android:src="@drawable/baseline_play_circle_outline_24" />

        <ImageButton
            android:id="@+id/timer_view_component_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_color"
            android:contentDescription="@string/reset_button_text"
            android:minWidth="@dimen/timer_view_component_button_width"
            android:minHeight="@dimen/timer_view_component_button_height"
            android:src="@drawable/baseline_stop_24" />

    </LinearLayout>

</merge>